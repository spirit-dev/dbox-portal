{% extends('SpiritDevDBoxPortalBundle:Mailer:mailLayout.html.twig') %}

{% block mailTitle %}
    {{ 'mail.global.hello_user'|trans({'%firstname%': user.firstname,'%lastname%': user.lastname}) }}
{% endblock mailTitle %}

{% block content %}

    <table width="600px" height="100%" align="center" border="0" cellspacing="0" cellpadding="0"
           style="PADDING-BOTTOM: 0px !important; PADDING-TOP: 0px !important; PADDING-LEFT: 0px !important; MARGIN: 0px; PADDING-RIGHT: 0px !important; COLOR: #FFFFFF;; Z-INDEX: 2;">

        <tr style="TEXT-ALIGN: center;">
            <td>
                <h1>
                    {{ 'mail.global.hello_user'|trans({'%firstname%': user.firstname,'%lastname%': user.lastname}) }}
                </h1>
            </td>
        </tr>

        <tr style="TEXT-ALIGN: center;">
            <td>

                {% if status == "deletion" %}
                    <p>{{ 'mail.user.account.deletion.slot1'|trans }}</p>
                    <p>{{ 'mail.user.account.deletion.slot2'|trans }}</p>
                    <p>{{ 'mail.user.account.deletion.slot3'|trans }}</p>
                    <p>{{ admin_mail }}</p>
                {% elseif status == "deactivation" %}
                    <p>{{ 'mail.user.account.deactivation.slot1'|trans }}</p>
                    <p>{{ 'mail.user.account.deactivation.slot2'|trans }}</p>
                    <p>{{ 'mail.user.account.deactivation.slot3'|trans }}</p>
                    <p>{{ 'mail.user.account.deactivation.slot4'|trans }}</p>
                    <p>{{ admin_mail }}</p>
                {% elseif status == "activation" %}
                    <p>{{ 'mail.user.account.activation.slot1'|trans }}</p>
                    <h5>{{ 'mail.user.account.activation.slot2'|trans }}</h5>
                {% endif %}

                <p>{{ 'mail.global.connect_app'|trans }}</p>
                {% if status == "activation" %}
                    <a class="btn btn-success btn-small" href="{{ app_url }}"
                       target="_blank">Ecosystem V2</a>
                {% endif %}

            </td>
        </tr>

    </table>

{% endblock content %}