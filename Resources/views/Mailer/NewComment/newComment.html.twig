{% include('SpiritDevDBoxPortalBundle:Mailer:mailLayout.html.twig') %}

{% block content %}

    <div class="row">

        <div class="col-sm-12">
            <h1>{{ 'mail.global.header'|trans|raw }}</h1>
        </div>

    </div>

    <div class="row">

        <div class="col-sm-12">

            {% if user != null %}
                <h3>{{ 'mail.global.hello_user'|trans({
                        '%firstname%': user.firstname,
                        '%lastname%': user.lastname}) }}</h3>
            {% else %}
                <h3>{{ 'mail.global.hello_admin'|trans }}</h3>
            {% endif %}
            <p>{{ 'mail.both.new_comment.slot1'|trans }}</p>
            <p>{{ 'mail.both.new_comment.slot2'|trans }}
                <a class="btn btn-primary"
                   href="{{ demand_url }}">{{ 'mail.both.new_comment.link1'|trans }}</a>
            </p>
        </div>

    </div>

    <div class="row">

        <div class="col-sm-12">
            <h4>{{ 'mail.global.footer.slot1'|trans }}</h4>
            <h4>{{ 'mail.global.footer.slot2'|trans }}</h4>
        </div>

    </div>

{% endblock content %}