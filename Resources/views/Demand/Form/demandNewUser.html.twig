{% extends('SpiritDevBundleDBoxPortalBundle::layout.html.twig') %}

{% block title %}{{ 'pagetitle.demand'|trans }} - {{ parent() }}{% endblock %}

{% block more_javascript %}
    {% javascripts
    '@SpiritDevDBoxPortalBundle/Resources/public/js/registration.js' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock more_javascript %}

{% block content %}
    <div class="col-sm-6">
        <h3 class="page-header">{{ 'demands.nusersform.formhead'|trans }}</h3>

        <form class="form-horizontal" action="{{ path('spirit_dev_dbox_portal_bundle_demand_new_user') }}" {{ form_enctype(form) }}
              method="POST">

            {{ form_start(form) }}
            {{ form_errors(form) }}

            <div class="form-group">
                {{ form_label(form.email) }}
                <div class="col-sm-offset-1 col-sm-9">
                    {{ form_widget(form.email) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.firstname) }}
                <div class="col-sm-offset-1 col-sm-9">
                    {{ form_widget(form.firstname) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.lastname) }}
                <div class="col-sm-offset-1 col-sm-9">
                    {{ form_widget(form.lastname) }}
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-9">
                    {{ form_widget(form.save) }}
                </div>
            </div>

            {{ form_end(form) }}

        </form>

        <hr>

        {# Guess username #}
        <div class="form-horizontal">
            <div class="form-group">
                <label class="col-sm-2 control-label"
                       for="username_guess">{{ 'demands.nusersform.username'|trans }}</label>
                <div class="col-sm-offset-1 col-sm-9">
                    <input id="username_guess" type="text" class="form-control" disabled>
                </div>
            </div>
        </div>
    </div>
{% endblock content %}
